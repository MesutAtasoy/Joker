@model Joker.Identity.ViewModels.Account.LoginViewModel

<body class="sign-in-illustration">

@if (Model.EnableLocalLogin)
{
    <partial name="_ValidationSummary"/>

    <section>
        <div class="page-header min-vh-100">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto">
                        <div class="card card-plain">
                            <div class="card-header pb-0 text-left">
                                <h4 class="font-weight-bolder">Sign In</h4>
                                <p class="mb-0">Enter your email and password to sign in</p>
                            </div>
                            <div class="card-body">
                                <form asp-route="Login">
                                    <input type="hidden" asp-for="ReturnUrl"/>
                                    <div class="mb-3">
                                        <input type="text" class="form-control form-control-lg" placeholder="Email" aria-label="Email" aria-describedby="email-addon" asp-for="Username">
                                    </div>
                                    <div class="mb-3">
                                        <input type="password" class="form-control form-control-lg" placeholder="Password" aria-label="Password" aria-describedby="password-addon" asp-for="Password" autocomplete="off">
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="rememberMe" asp-for="RememberLogin">
                                        <label class="form-check-label" for="rememberMe">Remember me</label>
                                    </div>
                                    <div class="text-center">
                                        <button class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" name="button" value="login">Login</button>
                                        <button class="btn btn-lg bg-gradient-danger btn-lg w-100 mt-4 mb-0" name="button" value="cancel">Cancel</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                <p class="mb-4 text-sm mx-auto">
                                    Don't have an account?
                                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-primary text-gradient font-weight-bold">Sign up</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 end-0 text-center justify-content-center flex-column">
                        <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center">
                            <img src="~/theme/img/shapes/pattern-lines.svg" alt="pattern-lines" class="position-absolute opacity-4 start-0">
                            <div class="position-relative">
                                <img class="max-width-500 w-100 position-relative z-index-2" src="~/theme/img/illustrations/sign-up.png">
                            </div>
                            <h4 class="mt-5 text-white font-weight-bolder">"Joker"</h4>
                            <p class="text-white">Joker is platform which you explore all popular campaigns where you live!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
</body>