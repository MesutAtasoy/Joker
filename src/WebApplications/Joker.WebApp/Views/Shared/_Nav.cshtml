<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient-dark z-index-3 py-3">
        <div class="container">
            <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index" rel="tooltip" data-placement="bottom">
                Joker
            </a>
            <div class="collapse navbar-collapse w-100 pt-3 pb-2 py-lg-0" id="navigation">
                <ul class="navbar-nav navbar-nav-hover mx-auto">
                    <li class="nav-item mx-2">
                        <a class="nav-link ps-2 d-flex justify-content-between cursor-pointer align-items-center" asp-controller="Home" asp-action="Index" role="button">
                            Explore
                        </a>
                    </li>

                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item mx-2">
                            <a class="nav-link ps-2 d-flex justify-content-between cursor-pointer align-items-center" role="button" asp-controller="Account" asp-action="Index">
                                Profile
                            </a>
                        </li>

                        <li class="nav-item dropdown dropdown-hover mx-2">
                            <a class="nav-link ps-2 d-flex justify-content-between cursor-pointer align-items-center" role="button" asp-controller="Account" asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }

                </ul>

                @if (User != null && !User.IsInRole("PaidUser"))
                {
                    <ul class="navbar-nav d-lg-block d-none">
                        <li class="nav-item">
                            <a class="btn btn-sm  bg-gradient-primary  btn-round mb-0 me-1" role="button" asp-controller="Subscription" asp-action="Index">
                                Become a Merchant
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav d-lg-block d-none">
                        <li class="nav-item">
                            <a class="btn btn-sm  bg-gradient-primary  btn-round mb-0 me-1" role="button">Publish a Campaign</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
</header>