@model Joker.WebApp.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<header>
    <div class="page-header min-vh-25">
        <div class="oblique position-absolute top-0 h-100 d-md-block d-none">
            <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6"></div>
        </div>
        <div class="container">
            <div class="row">
                <div class="d-flex justify-content-center flex-column">
                    <h1 class="text-gradient text-primary">Joker</h1>
                    <h1 class="mb-4">Best Campaigns which you may like, Explore them!</h1>
                    <p class="lead pe-5 me-5">Joker is platform which you explore all popular campaigns where you live!</p>
                    <p class="lead pe-5 me-5">Be the first to see the popular campaigns.</p>
                </div>
            </div>
        </div>
    </div>
</header>

<form asp-controller="Search" asp-action="Index" method="get">
    <div class="row d-flex justify-content-center mb-3 bg-gradient-faded-light-vertical rounded-3">
        <div class="col-2">

        </div>
        <div class="p-2 col-6">
            <input class="form-control form-control-lg" type="text" placeholder="Search Campaign which you like!" aria-label=".form-control-lg example" asp-for="q"/>
        </div>
        <div class="p-2 col-4">
            <input type="submit" class="btn btn-info btn-lg" value="Search"/>
        </div>
    </div>
</form>

<div class="text-center mb-4 mt-4">
    <h1 class="text-gradient text-primary"> Popular Campaigns</h1>
</div>


<div class="card-group">
    @foreach (var campaign in Model.Campaigns.Documents)
    {
        <div class="card">
            <div class="card-header p-0 mx-3 mt-3 position-relative z-index-1">
                <a class="d-block" asp-controller="Campaign" asp-action="Explore" asp-route-id="@campaign.Slug">
                    <img src="~/images/joker.png" class="img-fluid border-radius-lg">
                </a>
            </div>

            <div class="card-body pt-2">
                <span class="text-gradient text-primary text-uppercase text-xs font-weight-bold my-2">Joker</span>
                <a class="card-title h5 d-block text-darker" asp-controller="Campaign" asp-action="Explore" asp-route-id="@campaign.Slug">
                    @campaign.Title
                </a>
                <p class="card-description mb-4">
                    @* @campaign.Description *@
                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                </p>
                <div class="author align-items-center">
                    <img src="~/images/joker.png" alt="..." class="avatar shadow">
                    <div class="name ps-3">
                        @* <span>@campaign.StoreName</span> *@
                        <span>Test Store</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>